<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



    <TextView
        android:id="@+id/textView_home01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="64dp"
        android:gravity="center"
        android:text="@string/text_home01"
        android:textColor="@android:color/holo_red_light"
        android:textSize="30sp"
        android:layout_marginBottom="48dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autoLink="web"
        android:text="@string/text_home02"
        android:textColor="#000"
        android:textSize="15sp"
        android:textStyle="italic"
        android:layout_below="@+id/textView_home01"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView_home02"
        android:gravity="center"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"/>

    <Button
        android:id="@+id/button_verbrauch"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/button_text_verbrauch"
        android:background="@color/primary_light"
        android:layout_below="@+id/textView_home02"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:layout_marginBottom="64dp" />
    </RelativeLayout>

    </ScrollView>

</RelativeLayout>